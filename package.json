{
  "name": "vps-stock-monitor",
  "version": "0.1.0",
  "description": "VPS stock monitoring service on Cloudflare Workers",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "dev:remote": "wrangler dev --remote",
    "deploy": "wrangler deploy",
    "lint": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:dmit": "vitest run dmit.test.ts"
  },
  "dependencies": {
    "hono": "^4.6.5"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240909.0",
    "@cloudflare/vitest-pool-workers": "^0.6.0",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "vitest": "^2.1.9",
    "wrangler": "^4.60.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
